<!DOCTYPE html>
<html xmlns:layout="http://www.w3.org/1999/xhtml" layout:decorate="~{layout/main_layout}" lang="fr">

<div layout:fragment="content" class="row">

    <!-- BOUTON CREATE AU SOMMET DE LA PAGE -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow border-0">
                    <div class="card-body p-5">
                        <button class="btn btn-primary mb-4" onclick="window.location.href='/create'">Créer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TABLEAU AUSSI EN HAUT DE LA PAGE -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <section class="section section-report">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <h2 class="mb-4">Détails du projet</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Date de création</th>
                                <th>Version</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Département</td>
                                <td>Aujourd'hui</td>
                                <td>1.0</td>
                                <td><button class="btn btn-sm btn-primary">Modifier</button></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-5 d-flex justify-content-center">
                        <a href="#" class="btn btn-secondary">Détails supplémentaires</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

</div>
</html>